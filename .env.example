# WhisperBridge Environment Variables

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_organization_id_here

# Application Settings
WHISPERBRIDGE_LANGUAGE=ru
WHISPERBRIDGE_THEME=dark
WHISPERBRIDGE_STARTUP_WITH_SYSTEM=true
WHISPERBRIDGE_SHOW_NOTIFICATIONS=true

# Hotkeys
WHISPERBRIDGE_TRANSLATE_HOTKEY=ctrl+shift+t
WHISPERBRIDGE_QUICK_TRANSLATE_HOTKEY=ctrl+shift+q

# OCR Settings
WHISPERBRIDGE_PRIMARY_OCR_ENGINE=easyocr
WHISPERBRIDGE_FALLBACK_OCR_ENGINE=paddleocr
WHISPERBRIDGE_OCR_LANGUAGES=en,ru
WHISPERBRIDGE_OCR_CONFIDENCE_THRESHOLD=0.7

# Translation Settings
WHISPERBRIDGE_API_PROVIDER=openai
WHISPERBRIDGE_MODEL=gpt-3.5-turbo
WHISPERBRIDGE_SOURCE_LANGUAGE=auto
WHISPERBRIDGE_TARGET_LANGUAGE=ru

# UI Settings
WHISPERBRIDGE_OVERLAY_POSITION=cursor
WHISPERBRIDGE_OVERLAY_TIMEOUT=10
WHISPERBRIDGE_WINDOW_OPACITY=0.95
WHISPERBRIDGE_FONT_SIZE=12

# Logging
WHISPERBRIDGE_LOG_LEVEL=INFO
WHISPERBRIDGE_LOG_FILE=logs/whisperbridge.log

# Cache Settings
WHISPERBRIDGE_CACHE_ENABLED=true
WHISPERBRIDGE_CACHE_SIZE_MB=100

# Development
WHISPERBRIDGE_DEBUG=false